    "chalk": "^5.3.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}