{
  "name": "book-formatter",
  "version": "1.0.0",
  "description": "Book publishing template formatter - converts markdown books to various formats",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test --test-concurrency=1 tests/BookGenerator.test.js tests/ConfigValidator.test.js tests/UxRollout.test.js tests/UnicodeChecker.test.js tests/CheckLinks.test.js tests/CheckTextlint.test.js tests/CheckLayoutRisk.test.js",
    "format": "prettier --write .",
    "lint": "eslint src/ tests/",
    "build": "node scripts/build.js",
    "check-links": "node scripts/check-links.js",
    "check-links:all": "node scripts/check-links.js . --output link-report.json",
    "check-layout-risk": "node scripts/check-layout-risk.js",
    "check-textlint": "node scripts/check-textlint.js",
    "check-unicode": "node scripts/check-unicode.js",
    "dashboard": "node scripts/dashboard.js",
    "dashboard:watch": "node scripts/dashboard.js --watch",
    "dashboard:report": "node scripts/dashboard.js --report markdown --save dashboard-report.md",
    "sync-components": "node scripts/sync-components.js",
    "sync-components:all": "node scripts/sync-components.js --all",
    "sync-components:dry-run": "node scripts/sync-components.js --all --dry-run",
    "diagnose": "node scripts/diagnose.js",
    "troubleshoot": "node scripts/troubleshoot.js",
    "health-check": "node scripts/diagnose.js --export"
  },
  "keywords": [
    "book",
    "publishing",
    "markdown",
    "format",
    "template"
  ],
  "author": "ITDO Inc.",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@textlint/textlint-plugin-markdown": "^15.5.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "markdown-it": "^14.1.0",
    "markdown-it-footnote": "^4.0.0",
    "textlint": "^15.5.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-prh": "^6.1.0",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  }
}
